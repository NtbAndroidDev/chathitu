<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnEmpty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_food_empty"
        tools:ignore="ContentDescription" />

    <vn.hitu.ntb.widget.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/empty"
        android:textColor="@color/common_text_hint_color"
        app:textAllCaps="true" />

    <vn.hitu.ntb.widget.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_32"
        android:text="@string/empty_contact" />

    <vn.hitu.ntb.widget.AppTextViewBold
        android:id="@+id/btnSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_form_input_on"
        android:drawableLeft="@drawable/ic_sync"
        android:drawablePadding="@dimen/dp_4"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_4"
        android:text="@string/update"
        android:textColor="@color/white"
        app:textAllCaps="true" />
</LinearLayout>