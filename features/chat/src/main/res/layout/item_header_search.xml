<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llCountMessSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/main_bg"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:background="@color/transparent"
            android:src="@drawable/ic_back_white" />

        <vn.hitu.ntb.widget.AppEditText
            android:id="@+id/edtInputSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_weight="1"
            android:autoLink="none"
            android:background="@color/transparent"
            android:hint="@string/search_message"
            android:inputType="none|text|textCapSentences|textAutoCorrect|textMultiLine"
            android:maxLength="120"
            android:scrollbars="none"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/bg_text_cursor_main"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</layout>