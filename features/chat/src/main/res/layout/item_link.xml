<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/llLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_weight="1"
                app:layout_constraintEnd_toStartOf="@+id/btnUtilitiesOne"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_default"
                    android:contentDescription="@string/description_place_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:orientation="vertical">

                    <vn.hitu.ntb.widget.AppTextView
                        android:id="@+id/tvDomain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:maxLines="1"
                        android:textColor="@color/blue_700"
                        android:textSize="@dimen/sp_12" />

                    <vn.hitu.ntb.widget.AppTextView
                        android:id="@+id/tvURL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_32"
                        android:drawablePadding="@dimen/dp_4"
                        android:maxLines="1"
                        android:textColor="@color/gray_900"
                        android:textSize="@dimen/sp_12" />

                    <vn.hitu.ntb.widget.AppTextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_32"
                        android:drawablePadding="@dimen/dp_4"
                        android:maxLines="2"
                        android:paddingBottom="@dimen/dp_8"
                        android:textColor="@color/gray_500"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_detail" />
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/ibUtilitiesOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@null"
                android:src="@drawable/ic_more_chat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/description_place_image" />
        </LinearLayout>


    </LinearLayout>
</layout>