<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginVertical="@dimen/dp_4"
        android:background="@drawable/bg_banner"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_margin="@dimen/dp_8"
            android:src="@drawable/bg_shimmer_25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_marginVertical="@dimen/dp_8"
            android:orientation="vertical">
            <vn.hitu.ntb.widget.AppTextViewBold
                android:id="@+id/txtFullName"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/imgAvatar"
                android:background="@drawable/bg_shimmer_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black" />
            <vn.hitu.ntb.widget.AppTextView
                android:id="@+id/tvMutualFriend"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/bg_shimmer_10"
                android:textSize="@dimen/sp_12"
                />

            <vn.hitu.ntb.widget.AppTextView
                android:id="@+id/tvToast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="@color/main_bg"
                android:textSize="@dimen/sp_12"
                app:textAllCaps="true"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/llButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4">
                <vn.hitu.ntb.widget.AppButton
                    android:id="@+id/btnDenied"
                    android:layout_width="@dimen/dp_128"
                    android:layout_height="@dimen/dp_32"
                    android:background="@drawable/bg_shimmer_25"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:stateListAnimator="@null"

                    />
                <vn.hitu.ntb.widget.AppButton
                    android:id="@+id/btnAgree"
                    android:layout_width="@dimen/dp_128"
                    android:layout_height="@dimen/dp_32"
                    android:background="@drawable/bg_shimmer_25"
                    android:layout_marginStart="@dimen/dp_8"
                    android:stateListAnimator="@null"

                    />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</layout>