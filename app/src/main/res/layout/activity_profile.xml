<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.activity.ProfileActivity">

        <include
            android:id="@+id/header"
            layout="@layout/item_header_profile" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/profileUser"
                    layout="@layout/view_layout_account_profile" />

                <include
                    android:id="@+id/profileIntroduce"
                    layout="@layout/view_layout_account_introduce" />

                <include
                    android:id="@+id/profileFriend"
                    layout="@layout/view_layout_account_my_friend" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</layout>